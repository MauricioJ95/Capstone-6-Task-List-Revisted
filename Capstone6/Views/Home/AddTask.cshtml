
@{
    ViewBag.Title = "AddTask";
}

<h2>Add Task</h2>
<form action="/Home/AddTask" method="post">
    <input name="TaskID" type="hidden" value="0"/>
    <input name="UserID" type="hidden" value="0"/>
    <input name="Description" type="text" placeholder="The Task" />
    <input name="DueDate" type="number" placeholder="xx/xx/xxxx" pattern="\d\d\/\d\d\/\d\d\d\d" />
    <input name="Completion" type="hidden" value="1"/>
    <input type="submit" value="Submit" />
</form>

